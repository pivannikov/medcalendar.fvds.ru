{block content}

<section class="shedule">
	<div class="container">
		<h1 n:block="title" class="mb-3 mt-1">Все пользователи</h1>
		<table class="users__table">
			<thead>
				<tr>
					<th>Имя</th>
					<th>email</th>
					<th>Телефон</th>
					<th>Дата рождения</th>
					<th>Роль пользователя</th>
					<th>Пол</th>
				</tr>
			</thead>
			<tbody>
				<tr n:foreach="$users as $item" class="">
					<td><b><a n:href="User:show $item->id">{$item->first_name} {$item->last_name}</a></b></td>
					<td>{$item->email}</td>
					<td>{$item->phone}</td>
					<td>{$item->birth_date|date:'j. n. Y'}</td>
					<td>{$item->role == admin ? 'админ' : 'пользователь'}</td>
					<td>{$item->gender == m ? 'м' : 'ж'}</td>
					
				</tr>
			</tbody>
		</table>
	</div>
</section>

{/block}